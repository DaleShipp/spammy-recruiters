{% extends "base.jinja" %}
{% block content %}
<div class="row-fluid">
    <div class="span6">
        <h4>Placeholder Header</h4>
        {{ lipsum(n=2) }}
        <p><strong>We know about <span class="badge">{{ count - 1 }}</span> spammy UK tech recruitment companies.</strong></p>
        <p><small>The spammer address file was last synchronised {{ latest }}.</small></p>
        <a class="label" href="{{ url_for('.download') }}">Download spammers.txt</a>
    </div>
    <div class="span6" id="FormHolder">
        <form id="SpammerForm" method="POST" action="{{ url_for('.index') }}">
            {% include "form.jinja" %}
        </form>
    </div>
</div>
{% endblock %}
