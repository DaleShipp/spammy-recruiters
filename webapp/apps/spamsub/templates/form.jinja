<fieldset>
<h4>Add a recruiter's address to our shared database</h4>
    <div class="control-group">
        <div class="controls">
            {{ form.csrf_token }}
            <div class="input-prepend">
                <span class="add-on">@</span>
                {{ form.address(placeholder="spammyrecruiter.co.uk", id="address", autofocus="autofocus", pattern="^[\w\-.]*\.[a-z]{2,4}$", required="required")}}
            </div>
            <div id="recaptcha_parent">
                <div id="recaptcha">
                    {{ form.recaptcha }}
                </div>
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            {{ form.submit(class="btn", id="spam_submit", value="Tell us") }}
        </div>
    </div>
</fieldset>
{% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
        <div id="thanks" class="information">
            <fieldset>
                <legend><div class="alert alert-success">Thanks!</div></legend>
                {% for category, message in messages %}
                    <h4 class="{{ category }}">{{ message }}</h4>
                {% endfor %}
            </fieldset>
        </div>
    {% endif %}
{% endwith %}
{% if form.errors %}
    <div id="errors" class="information">
        <fieldset>
            <legend><div class="alert alert-error">There was a problem</div></legend>
            <ul class="errors">
            {% for field_name, field_errors in form.errors|dictsort if field_errors %}
                {% for error in field_errors %}
                    <li>{{ form[field_name].label }} <small class="text-error">{{ error }}</small></li>
                {% endfor %}
            {% endfor %}
            </ul>
            <span class="help-block">Please try doing it right, then re-submitting the address.</span>
        </fieldset>
    </div>
{% endif %}
