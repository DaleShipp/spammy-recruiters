<fieldset>
<h4>Add a recruiter's address to our shared database</h4>
<div>
    {{ form.csrf_token }}
    <div class="input-prepend">
        <span class="add-on">@</span>
        {{ form.address(placeholder="spammyrecruiter.co.uk", autofocus="autofocus", pattern="^[\w\-.]*\.[a-z]{2,4}$",required="required") }}
    </div>
    <br>{{ form.submit(class="btn", value="Tell us") }}
</div>
</fieldset>
{% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
        <div>
        {% for category, message in messages %}
            <h4 class="{{ category }}">{{ message }}</h4>
        {% endfor %}
        </div>
    {% endif %}
{% endwith %}
{% if form.errors %}
    <br><fieldset>
        <legend>
            <h5>There was a problem</h5>
        </legend>
        <ul class="errors">
        {% for field_name, field_errors in form.errors|dictsort if field_errors %}
            {% for error in field_errors %}
                <li>{{ form[field_name].label }} <small class="text-error">{{ error }}</small></li>
            {% endfor %}
        {% endfor %}
        </ul>
        <span class="help-block">Please try doing it right, then re-submitting the address.</span>
    </fieldset>
{% endif %}
